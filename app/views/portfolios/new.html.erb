<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規ポートフォリオ投稿
      </h1>
    </div>
  </div>
</section>

<% if @portfolio.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@portfolio.errors.count, "error") %> prohibited this object being saved: not successfully</h2>
    <ul>
      <% @portfolio.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @portfolio, local: true do |f| %>
          <div class="field">
            <%= f.label :title, "ポートフォリオ名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "詳細", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :tag_name, "カテゴリー", class: "label" %>
            <%= f.text_field :tag_name, class: 'input' %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit "投稿", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>